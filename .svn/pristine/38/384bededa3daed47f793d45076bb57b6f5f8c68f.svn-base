.preview-big-img-container{
	position: absolute;
	/* display: none; */
	z-index: 999;
	border: solid 2px #00b7ee;
}
.preview-big-img-container::before{
	content: " ";
	position: absolute;
	width: 0px;
	height: 0px;
	border-width: 7px;
	border-color: transparent;
	border-style: dashed;
}
.preview-big-img-container.position-right::before{
    border-right-color: #00b7ee;
    border-right-style: solid;
    left: -15px;
}
.preview-big-img-container.position-left::before{
    border-left-color: #00b7ee;
    border-left-style: solid;
    right: -15px;
}
.preview-big-img-container.align-top::before{
	top: 20%;
}
.preview-big-img-container.align-bottom::before{
	top: 80%;
}

