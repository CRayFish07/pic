
body{
	/* background: url(../../images/bkg_03.jpg) no-repeat;
	background-size: cover;
	overflow: auto; */
	background: -webkit-linear-gradient(top,#1e90ff,#00bfff,#87ceeb);
    background: -moz-linear-gradient(top,#1e90ff,#00bfff,#87ceeb);
    background: -ms-linear-gradient(top,#1e90ff,#00bfff,#87ceeb);
    background: -o-linear-gradient(top,#1e90ff,#00bfff,#87ceeb);
    background: linear-gradient(top,#1e90ff,#00bfff,#87ceeb);
}

.login-content{
/* 	margin-top:200px;
 */	overflow:hidden;
	position:relative;
	/* border:solid 1px pink; */
}

.login-area{
	width: 400px;
	height: 400px;
	margin: auto;
    margin-top: 15%;
    margin-bottom: 15%;
	position:relative;
	/* margin-top:200px; */
	background:#FFF;
	border-radius:10px;
	-webkit-box-shadow: 2px 2px 1px 1px #EDEDED inset,-2px -2px 1px 1px #EDEDED inset;
	-moz-box-shadow: 2px 2px 1px 1px #EDEDED inset,-2px -2px 1px 1px #EDEDED inset;
	box-shadow: 2px 2px 1px 1px #EDEDED inset,-2px -2px 1px 1px #EDEDED inset;
	/* border:solid 1px black; */
}
.login-area .user-head{
	width: 100px;
	height: 100px;
	position:absolute;
	top:-50px;
	left:150px;
	z-index:9;
	border-radius:50%;
	background: url("../../images/people.png") no-repeat center;
	border:solid 1px #e0ffff;
	/* background: red; */
}
.login-area .login-title{
	width:100%;
	position:relative;
	top:50px;
	text-align: center;
	padding:10px 0px;
	border-bottom:dashed 1px #CCC;
	font-size: 18px;
	white-space: nowrap;
	word-spacing: normal;
	text-shadow: 1px 1px 1px #CCC,-1px -1px 1px #CCC;
}
.login-area .login-body{
	width:100%;
	position:relative;
	top:60px;
	/* border:solid 1px red; */
}
.login-area .login-form{
	position:relative;
	width: 250px;
	margin: 30px auto auto;
	/* border:solid 1px blue; */
}
.login-area .notice{
    position: absolute;
    left: 400px;
    top: 30%;
    padding: 10px;
    color: #ddd;
    width: 100%;
}
.form-row{
	display:inline-block;
	white-space: nowrap;
	border: none;
	margin-bottom: 20px;
}
.form-row input{
	border:solid 1px #CCC;
	outline: 0px none;
	padding: 4px 6px;
	width: 215px;
	border-radius: 0px 4px 4px 0px;
}
.form-row input:focus{
	border:solid 1px #00bfff;
	
	/* -webkit-box-shadow:1px 1px 1px #00bfff,-1px -1px  1px #00bfff;
	-moz-box-shadow:1px 1px 1px #00bfff,-1px -1px  1px #00bfff;
	box-shadow:1px 1px 1px #00bfff,-1px -1px  1px #00bfff; */
}

.form-row input.invalid{
	box-shadow: 0 0 5px #d45252;
    -webkit-box-shadow: 0 0 5px #d45252;
    -moz-box-shadow: 0 0 5px #d45252;

    border-color: #b03535;
    animation:invalideAnim 1s ease-out infinite;
}
@keyframes invalideAnim{
	
}
@-webkit-keyframes invalideAnim{
	
}
@-moz-keyframes invalideAnim{
	
}

.form-row .wrap-icon{
	display: inline-block;
	width: auto;
	min-width:16px;
	background: #EEE;
	border-radius: 4px 0px 0px 4px;
	text-align: center;
	text-shadow: 0px 1px 0px #FFF;
	padding:4px 10px;
	margin-right:-4px;
	border: 1px solid #CCC;
	border-right: none;
}
.form-row .wrap-icon-user
{
	padding: 4px 11.5px;
}
.form-row a.sumbit-btn{
	text-align: center;
	padding: 5px 108px;
	border-radius: 4px;
	text-decoration: none;
	background: #00bfff;
	color: #FFF;
	font-size: 18px;
	font-weight: normal;
	
}
.for-row .loading{
	padding:5px 90px;
}
.form-row a.sumbit-btn:hover{
	background:#1e90ff;
	text-decoration: none;
}

.btn-row{
	margin-top: 40px;
}
.login-form .login-fail{
	width:100%;
	position: absolute;
	color: red;
	text-align: center;
	top:55%;
}







